<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminDashboardFragment">

    <!-- Header -->
    <TextView
        android:id="@+id/admin_dashboard_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/admin_console"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Quick Stats Row -->
    <LinearLayout
        android:id="@+id/admin_dashboard_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/admin_dashboard_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Example stat cards -->
        <TextView android:id="@+id/stat_total_members" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_total_members" android:padding="8dp" />
        <TextView android:id="@+id/stat_active_events" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_active_events" android:padding="8dp" />
        <TextView android:id="@+id/stat_pending_requests" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_pending_requests" android:padding="8dp" />
    </LinearLayout>

    <!-- Quick Actions Grid -->
    <GridLayout
        android:id="@+id/admin_dashboard_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/admin_dashboard_stats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button android:id="@+id/btn_create_event" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/create_event" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn_post_announcement" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/post_announcement" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn_manage_members" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/manage_members" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn_approve_requests" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/approve_requests" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn_scan_attendance" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/scan_attendance" android:layout_columnWeight="1" />
        <Button android:id="@+id/btn_broadcast_message" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/broadcast_message" android:layout_columnWeight="1" />
    </GridLayout>

    <!-- Recent Activity Log -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_dashboard_activity_log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/admin_dashboard_grid"
        app:layout_constraintBottom_toTopOf="@id/admin_dashboard_fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB for Broadcast -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/admin_dashboard_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_dialog_email"
        android:contentDescription="@string/broadcast_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
